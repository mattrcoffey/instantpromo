<?xml version="1.0"?>
<config>
    <modules>
        <Instant_Packages>
            <version>0.4.0</version>
        </Instant_Packages>
    </modules>
    <frontend>
        <routers>
            <packages>
                <use>standard</use>
                <args>
                    <module>Instant_Packages</module>
                    <frontName>packages</frontName>
                </args>
            </packages>
        </routers>
        <layout>
            <updates>
                <packages>
                    <file>packages.xml</file>
                </packages>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <packages>
                <use>admin</use>
                <args>
                    <module>Instant_Packages</module>
                    <frontName>packages</frontName>
                </args>
            </packages>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cms>
                <children>
                    <editor translate="title" module="packages">
                        <title>Packages</title>
                        <action>packages/adminhtml_package</action>
                        <sort_order>100</sort_order>
                    </editor>
                </children>
            </cms>
        </menu>

        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <packages>
                            <title>Packages Module</title>
                            <sort_order>200</sort_order>
                        </packages>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <packages module="packages">
                    <file>package.xml</file>
                </packages>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <package>
                <class>Instant_Packages_Model</class>
                <resourceModel>package_mysql4</resourceModel>
            </package>
            <package_mysql4>
                <class>Instant_Packages_Model_Mysql4</class>
                <entities>
                    <package>
                        <table>packages</table>
                    </package>
                </entities>
            </package_mysql4>

            <size>
                <class>Instant_Packages_Model</class>
                <resourceModel>size_mysql4</resourceModel>
            </size>
            <size_mysql4>
                <class>Instant_Packages_Model_Mysql4</class>
                <entities>
                    <size>
                        <table>package_sizes</table>
                    </size>
                </entities>
            </size_mysql4>
        </models>
        <resources>
            <packages_setup>
                <setup>
                    <module>Instant_Packages</module>
                    <class>Instant_Packages_Model_Resource_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </packages_setup>
            <packages_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </packages_write>
            <packages_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </packages_read>
        </resources>
        <blocks>
            <package>
                <class>Instant_Packages_Block</class>
            </package>

            <size>
                <class>Instant_Packages_Block</class>
            </size>
        </blocks>
        <helpers>
            <packages>
                <class>Instant_Packages_Helper</class>
            </packages>
        </helpers>
    </global>
</config>