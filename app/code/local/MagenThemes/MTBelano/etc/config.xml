<config>
    <modules>
        <MagenThemes_MTBelano>
            <version>2.0.8</version>
        </MagenThemes_MTBelano>
    </modules>
    <frontend>
        <routers>
            <mtbelano>
                <use>standard</use>
                <args>
                    <module>MagenThemes_MTBelano</module>
                    <frontName>mtbelano</frontName>
                </args>
            </mtbelano>
        </routers>
        <layout>
            <updates>
                <mtbelano>
                    <file>mtbelano.xml</file>
                </mtbelano>
            </updates>
        </layout>
		<events>
            <controller_action_postdispatch>
                <observers>
                    <prevnext_set_filtered_category_product_collection>
                        <class>mtbelano/observer</class>
                        <method>setPrevNextProductCollection</method>
                    </prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
        </events>
        <catalog_block_product_list_collection>
            <observers>
                <mtdefault>
                    <type>model</type>
                    <class>mtbelano/observer</class>
                    <method>catalogBlockProductCollectionBeforeToHtml</method>
                </mtdefault>
            </observers>
        </catalog_block_product_list_collection>
    </frontend>
    <admin>
        <routers>
	       <mtbelano>
				<use>admin</use>
				<args>
				    <module>MagenThemes_MTBelano</module>
				    <frontName>mtbelano</frontName>
				</args>
	       </mtbelano>
        </routers>
    </admin>
    <adminhtml>
		<layout>
		    <updates>
			<mtbelano>
			    <file>mtbelano.xml</file>
			</mtbelano>
		    </updates>
		</layout>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <mtbelano>
                        <type>singleton</type>
                        <class>mtbelano/observer</class>
                        <method>configSave</method>
                    </mtbelano>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <store_edit>
                <observers>
                    <mtbelano>
                        <type>singleton</type>
                        <class>mtbelano/observer</class>
                        <method>storeEdit</method>
                    </mtbelano>
                </observers>
            </store_edit>
        </events>
    </adminhtml>   
    <global>
        <models>
            <mtbelano>
                <class>MagenThemes_MTBelano_Model</class>
            </mtbelano>
            <core>
                <rewrite>
                    <layout>MagenThemes_MTTheme_Model_System_Layout_Layout</layout>
                </rewrite>
            </core>
        </models>
        <resources>
            <mtdefault_setup>
                <setup>
                    <module>MagenThemes_MTBelano</module>
                </setup>
            </mtdefault_setup>
        </resources>
        <blocks>
            <mtbelano>
                <class>MagenThemes_MTBelano_Block</class>
            </mtbelano>
        </blocks>
        <helpers>
            <mtbelano>
                <class>MagenThemes_MTBelano_Helper</class>
            </mtbelano>
        </helpers>
    </global>
    <default>
        <mtbelano>
