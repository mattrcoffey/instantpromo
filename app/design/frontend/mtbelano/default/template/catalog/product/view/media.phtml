/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image product-image-zoom">
    <?php
        $_img = '<img id="image" class="img-responsive lazy" src="'.$this->helper('catalog/image')->init($_product, 'image').'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>

<script type="text/javascript">
//<![CDATA[
    Event.observe(window, 'load', function() {
        product_zoom = new Product.Zoom('image', 'track', 'handle', 'zoom_in', 'zoom_out', 'track_hint');
    });
//]]>
</script>
<?php else: ?>
<p class="product-image">
    <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(265).'" class="img-responsive lazy" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <h2><?php echo $this->__('Product Gallery - click an image to view') ?></h2>
    <ul>
    
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <li>
                <a title="<?php echo $this->escapeHtml($_image->getLabel()) ?>" class="gallery" href="<?php echo $_image->getUrl()?>" rel="product-images" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(56); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" /></a> 
     
          
       <script>  
    $mt('.gallery').colorbox({
        arrowKey: true,
        //open: true, this auto opens the gallery on page load
        opacity: 0.5,
        iframe: false,
        //innerWidth:1000,  
        //innerHeight:600,
        scrolling:true,
        rel:"gallery"
        }); 
</script>  
</li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
